<syncfusion:RibbonWindow
    x:Class="MivexBlagajna.UI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="[controls ]clr-namespace:MivexBlagajna.UI.Controls"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    xmlns:syncfusionSkin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    Title="MainWindow"
    Width="525"
    Height="350"
    syncfusionSkin:SfSkinManager.Theme="{syncfusionSkin:SkinManagerExtension ThemeName=FluentDark}"
    Icon="App.ico">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <controls:NavigationRibbon />

        <controls:DockingAdapter Grid.Row="1" ActiveDocument="{Binding ActiveDocument, Mode=TwoWay}" />

    </Grid>

</syncfusion:RibbonWindow>
