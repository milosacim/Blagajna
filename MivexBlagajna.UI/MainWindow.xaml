<syncfusion:RibbonWindow
    x:Class="MivexBlagajna.UI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:MivexBlagajna.UI.Controls"
    xmlns:views ="clr-namespace:MivexBlagajna.UI.Views"
    xmlns:komitentiviewmodels="clr-namespace:MivexBlagajna.UI.ViewModels.Komitenti"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    xmlns:syncfusionSkin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    Title="Blagajna - Mivex D.O.O Cacak"
    Width="525"
    Height="350"
    syncfusionSkin:SfSkinManager.Theme="{syncfusionSkin:SkinManagerExtension ThemeName=FluentLight}"
    Icon="App.ico">

    <Window.Resources>

        <DataTemplate DataType="{x:Type komitentiviewmodels:KomitentiViewModel}">
            <views:KomitentiView />
        </DataTemplate>

    </Window.Resources>
    
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <controls:NavigationRibbon />

        <controls:DockingAdapter Grid.Row="1" ItemsSource="{Binding Workspaces}"
                                 ActiveDocument="{Binding ActiveViewModel, Mode=TwoWay}"/>

    </Grid>

</syncfusion:RibbonWindow>
