<UserControl
    x:Class="MivexBlagajna.UI.Controls.NavigationRibbon"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MivexBlagajna.UI.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <syncfusion:Ribbon x:Name="_ribbon" VerticalAlignment="Top">

        <syncfusion:RibbonTab Caption="Sifarnik" IsChecked="True">

            <syncfusion:RibbonBar
                Name="sifarnik"
                Width="150"
                Header="Sifarnik">
                <syncfusion:RibbonButton
                    Margin="20,5,10,0"
                    FontSize="10"
                    Label="Komitenti"
                    SizeForm="Large" 
                    Command="{Binding SelectViewModelCommand}" 
                    CommandParameter="{Binding KomitentiViewModel}"/>
                <syncfusion:RibbonButton
                    Margin="10,5,10,0"
                    FontSize="10"
                    Label="Mesta troska"
                    SizeForm="Large" />
            </syncfusion:RibbonBar>

        </syncfusion:RibbonTab>

        <syncfusion:RibbonTab Caption="Pregledi" IsChecked="False">

            <syncfusion:RibbonBar
                Name="pregledi"
                Width="150"
                Header="Pregledi">
                <syncfusion:RibbonButton
                    Margin="20,5,10,0"
                    FontSize="10"
                    Label="Uplata / Isplata"
                    SizeForm="Large" />
                <syncfusion:RibbonButton
                    Margin="10,5,10,0"
                    FontSize="10"
                    Label="Finansijska kartica"
                    SizeForm="Large" />
            </syncfusion:RibbonBar>

        </syncfusion:RibbonTab>

    </syncfusion:Ribbon>

</UserControl>
