<UserControl x:Class="MivexBlagajna.UI.Views.UplateIsplateView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             xmlns:inputLayout="clr-namespace:Syncfusion.UI.Xaml.TextInputLayout;assembly=Syncfusion.SfTextInputLayout.WPF"
             xmlns:local="clr-namespace:MivexBlagajna.UI.Views"
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
   
    
    <UserControl.Resources>

        <ObjectDataProvider x:Key="vrsteNaloga" MethodName="GetValues" ObjectType="{x:Type System:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="local:VrsteNalogaEnum"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

    </UserControl.Resources>
    
    <Grid>

        <Grid.RowDefinitions>

            <RowDefinition Height="auto"/>
            <RowDefinition />

        </Grid.RowDefinitions>

        <Grid>

            <Border Height="auto" Width="auto" Margin="0 10" Background="#F7F8F8">

                <Border.Effect>
                    <DropShadowEffect BlurRadius="5" Direction="-90" Opacity="0.1" />
                </Border.Effect>

                <Grid Margin="40 10">

                    <Grid.ColumnDefinitions>

                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition />

                    </Grid.ColumnDefinitions>

                    <Grid Margin="10 0 10 0">

                        <Grid.RowDefinitions>

                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition />

                        </Grid.RowDefinitions>

                        <StackPanel>
                            <Label Content="Datum" />
                            <syncfusion:DateTimeEdit DropDownView="Calendar"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Margin="0 10">
                            <Label Content="Vrsta naloga" />
                            <syncfusion:SfTextBoxExt BorderThickness="0.5" Height="25" ShowDropDownButton="True" VerticalAlignment="Center" AutoCompleteMode="Suggest"
                      AutoCompleteSource="{Binding Source={StaticResource vrsteNaloga}}" />
                        </StackPanel>

                    </Grid>

                    <Grid Grid.Column="1" Margin="10 0 10 0">

                        <Grid.RowDefinitions>

                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition />

                        </Grid.RowDefinitions>

                        <Grid>

                            <Grid.ColumnDefinitions>

                                <ColumnDefinition />
                                <ColumnDefinition />

                            </Grid.ColumnDefinitions>

                            <StackPanel>

                                <Label Content="Šifra" />
                                <syncfusion:SfTextBoxExt 
                                    BorderThickness="0.5" 
                                    VerticalAlignment="Center" 
                                    Height="25" 
                                    Width="80"
                                    Text="{Binding SearchKomitentText, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                    />

                            </StackPanel>

                            <StackPanel Grid.Column="1">

                                <Label Content="Komitent" Margin="20 0"/>
                                <syncfusion:SfTextBoxExt 
                                    BorderThickness="0.5" 
                                    VerticalAlignment="Center" 
                                    Height="25" 
                                    Margin="20 0 0 0" 
                                    Width="350"
                                    Text="{Binding FilteredKomitent.Naziv, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    />

                            </StackPanel>

                        </Grid>

                        <Grid Grid.Row="1" Margin="0 10">

                            <Grid.ColumnDefinitions>

                                <ColumnDefinition />
                                <ColumnDefinition />

                            </Grid.ColumnDefinitions>

                            <StackPanel>

                                <Label Content="Nalog" />
                                <syncfusion:SfTextBoxExt BorderThickness="0.5" VerticalAlignment="Center" Height="25" Width="80"/>

                            </StackPanel>

                            <StackPanel Grid.Column="1">

                                <Label Content="Opis" Margin="20 0"/>

                                <syncfusion:SfTextBoxExt BorderThickness="0.5" VerticalAlignment="Center" Height="25" Margin="20 0 0 0" Width="350"/>

                            </StackPanel>

                        </Grid>

                    </Grid>

                    <Grid Grid.Column="2" Margin="10 0 10 0">

                        <Grid.RowDefinitions>

                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition />

                        </Grid.RowDefinitions>

                        <Grid>

                            <Grid.ColumnDefinitions>

                                <ColumnDefinition />
                                <ColumnDefinition />

                            </Grid.ColumnDefinitions>

                            <StackPanel>

                                <Label Content="Šifra MT" />
                                <syncfusion:SfTextBoxExt BorderThickness="0.5" VerticalAlignment="Center" Height="25" Width="80"/>

                            </StackPanel>

                            <StackPanel Grid.Column="1">

                                <Label Content="Mesto troška" Margin="20 0"/>
                                <syncfusion:SfTextBoxExt BorderThickness="0.5" VerticalAlignment="Center" Height="25" Margin="20 0" Width="250"/>

                            </StackPanel>

                        </Grid>

                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0 35">

                            <StackPanel Orientation="Horizontal">
                                <RadioButton />
                                <Label Content="Opravdan" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="20 0">
                                <RadioButton />
                                <Label Content="Neopravdan" />
                            </StackPanel>

                        </StackPanel>

                    </Grid>

                    <Grid Grid.Column="3">

                        <Grid.RowDefinitions>

                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition />

                        </Grid.RowDefinitions>

                        <Grid>

                            <Grid.ColumnDefinitions>

                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition />

                            </Grid.ColumnDefinitions>

                            <StackPanel >
                                <Label Content="Uplata" />
                                <syncfusion:SfTextBoxExt BorderThickness="0.5" Watermark="0.00" VerticalAlignment="Center" Height="35" Width="150" />
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="20 0 0 0">
                                <Label Content="Isplata" />
                                <syncfusion:SfTextBoxExt BorderThickness="0.5" Watermark="0.00" VerticalAlignment="Center" Height="35" Width="150" />
                            </StackPanel>

                        </Grid>

                        <Grid Grid.Row="1" Margin="50 0">

                            <Grid.RowDefinitions>

                                <RowDefinition Height="auto"/>
                                <RowDefinition />

                            </Grid.RowDefinitions>

                            <StackPanel Orientation="Horizontal" Margin=" 0 25">

                                <syncfusion:ButtonAdv Label="Izmeni" Width="100" SizeMode="Normal" SmallIcon="/Images/icons8-edit-property-48.png"/>
                                <syncfusion:ButtonAdv Label="Otkaži" Width="100" SizeMode="Normal" SmallIcon="/Images/icons8-unavailable-50.png" Margin="20 0"/>

                            </StackPanel>

                        </Grid>

                    </Grid>

                    <Grid Grid.Column="4">

                        <Grid.RowDefinitions>

                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />

                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal" Margin="10 10">

                            <syncfusion:ButtonAdv SizeMode="Large" Label="Nov Nalog" LargeIcon="/Images/icons8-add-48.png"/>
                            <syncfusion:ButtonAdv SizeMode="Large" Label="Obriši unos" Margin="20 0" LargeIcon="/Images/icons8-remove-48.png"/>

                        </StackPanel>

                        <syncfusion:ButtonAdv HorizontalAlignment="Stretch" Width="100" Grid.Row="1" Margin="0 0 20 0" SizeMode="Large" Label="Sačuvaj" LargeIcon="/Images/icons8-save-48.png"/>

                    </Grid>

                    <Grid Grid.Column="5" >

                        <Grid.RowDefinitions>

                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />

                        </Grid.RowDefinitions>

                        <syncfusion:ButtonAdv SizeMode="large" Grid.Row="0" Label="Finansijska kartica" Margin="5 5" Width="250" LargeIcon="/Images/icons8-report-file-48.png"/>
                        <syncfusion:ButtonAdv SizeMode="Large" Grid.Row="1" Label="Komitenti" Margin="5 10" Width="250" LargeIcon="/Images/icons8-customer-48.png"/>
                    </Grid>

                </Grid>

            </Border>

        </Grid>

        <Grid Grid.Row="1" >

            <Border Margin="0 10"  Background="#F7F8F8">

                <syncfusion:SfDataGrid AllowResizingColumns="True" AutoGenerateColumns="False" ColumnSizer="Star" AddNewRowPosition="Top" AddNewRowText="Click here to add new row in datagrid">

                    <syncfusion:SfDataGrid.Columns>

                        <syncfusion:GridTextColumn HeaderText="Nalog" Width="50"/>
                        <syncfusion:GridTextColumn HeaderText="Vrsta" Width="100"/>
                        <syncfusion:GridTextColumn HeaderText="Datum" Width="100"/>
                        <syncfusion:GridTextColumn HeaderText="Konto" Width="100"/>
                        <syncfusion:GridTextColumn HeaderText="Sifra" Width="100"/>
                        <syncfusion:GridTextColumn HeaderText="Komitent" Width="300"/>
                        <syncfusion:GridTextColumn HeaderText="Sifra MT" Width="100"/>
                        <syncfusion:GridTextColumn HeaderText="Mesto Troska" Width="300" />
                        <syncfusion:GridTextColumn HeaderText="Opis" Width="300"/>
                        <syncfusion:GridTextColumn HeaderText="Trosak" />
                        <syncfusion:GridTextColumn HeaderText="Uplata" />
                        <syncfusion:GridTextColumn HeaderText="Isplata" />

                    </syncfusion:SfDataGrid.Columns>

                </syncfusion:SfDataGrid>

            </Border>

        </Grid>

    </Grid>
</UserControl>
