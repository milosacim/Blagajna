<UserControl
    x:Class="MivexBlagajna.UI.Views.Navigations.MestaTroskaNavigationView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MivexBlagajna.UI.Views.Navigations"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <syncfusion:SfTreeGrid
            ItemsSource="{Binding MestaTroska}"
            SelectedItem="{Binding SelectedMestoTroska, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            AutoExpandMode="AllNodesExpanded"
            AutoGenerateColumns="False"
            ChildPropertyName="Nadredjeni_Id"
            ExpanderColumn="Sifra"
            NavigationMode="Row"
            ParentPropertyName="Id"
            ShowRowHeader="True"
            NotificationSubscriptionMode="PropertyChange">

            <syncfusion:SfTreeGrid.Columns>

                <syncfusion:TreeGridTextColumn HeaderText="Šifra" MappingName="Sifra" />

                <syncfusion:TreeGridTextColumn HeaderText="Mesto Troška" MappingName="Naziv" />

            </syncfusion:SfTreeGrid.Columns>


        </syncfusion:SfTreeGrid>
    </Grid>


</UserControl>
